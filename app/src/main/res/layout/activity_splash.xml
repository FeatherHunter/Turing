<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hao.turing.Splash.SplashActivity">

    <RelativeLayout
        android:id="@+id/splash_bottom_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/splash_bottom_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RadioButton
                android:id="@+id/splash_bottom_left_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_bottom_unchecked_24dp"
                />

            <RadioButton
                android:id="@+id/splash_bottom_mid_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_bottom_unchecked_24dp"
                />

            <RadioButton
                android:id="@+id/splash_bottom_right_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_bottom_unchecked_24dp"
                />
        </RadioGroup>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/splash_bottom_relativelayout"
        >

    </android.support.v4.view.ViewPager>


</RelativeLayout>
